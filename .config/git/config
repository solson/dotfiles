[diff "rust"]
	xfuncname = "^[ \t]*(((pub([(][^)]*[)])?|const|unsafe|extern([ \t]*\"[^\"]*\")|async)[ \t]+)*((fn|struct|enum|impl|trait|mod|macro|const|static|use|extern[ \t]+crate)[^;]*))$"
[diff-so-fancy]
	markEmptyLines = false
	stripLeadingSymbols = false
	useUnicodeRuler = false
[core]
