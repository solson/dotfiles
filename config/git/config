# vim: ft=gitconfig

[include]
path = config.private

[user]
name = Scott Olson
email = scott@solson.me

[alias]
br = branch -vv
clone1 = clone --depth=1
cm = commit
cmb = "!f() { git switch -c \"$1\" && git commit; }; f"
l = lg HEAD --not --remotes
lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
re = restore
s = show --no-patch
ss = show --stat
st = status -s
sw = switch

[push]
default = simple

[pull]
ff = only

[github]
user = solson

[diff "rust"]
xfuncname = "^[ \t]*(((pub([(][^)]*[)])?|const|unsafe|extern([ \t]*\"[^\"]*\")|async)[ \t]+)*((fn|struct|enum|impl|trait|mod|macro|const|static|use|extern[ \t]+crate)[^;]*))$"

[diff-so-fancy]
markEmptyLines = false
stripLeadingSymbols = false
useUnicodeRuler = true

[core]
pager = diff-so-fancy | less -RFX

[color]
ui = true

[color "diff-highlight"]
oldNormal = red
oldHighlight = brightred 52 # 52 is the darkest red in the 256 colors.
newNormal = green
newHighlight = brightgreen 22 # 22 is the darkest green in the 256 colors.

[color "diff"]
meta = brightblue
frag = brightmagenta
func = black bold
commit = brightyellow
old = red
new = green
whitespace = red reverse

[color "status"]
added = brightgreen
updated = brightgreen
changed = red
untracked = red
branch = green
unmerged = brightred

[commit]
verbose = true

[difftool]
prompt = false

[difftool "nvimdiff"]
cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[diff]
tool = nvimdiff

[rebase]
autoSquash = true
